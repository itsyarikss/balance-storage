<Window x:Class="Casik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Требую додепа"
        Height="550" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F1A">

    <Window.Resources>
        <!-- 🔥 Градиент кнопок -->
        <LinearGradientBrush x:Key="CasinoButtonBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4C1AFF" Offset="0"/>
            <GradientStop Color="#8B00FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- 🔥 Glow -->
        <DropShadowEffect x:Key="GlowEffect"
                          Color="#8B00FF"
                          BlurRadius="25"
                          ShadowDepth="0"
                          Opacity="0.8"/>

        <!-- 🎛 Стиль кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CasinoButtonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource GlowEffect}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🎛 Текст -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#C8C9FF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- 🎛 Текстбокс -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="BorderBrush" Value="#8B00FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <TextBlock Text="Д О Д Е П"
                   FontSize="48"
                   FontWeight="Bold"
                   Foreground="#8B00FF"
                   HorizontalAlignment="Center"
                   Margin="15"
                   Effect="{StaticResource GlowEffect}"/>

        <TextBlock x:Name="BalanceText"
                   Text="Максимальный додепчик на сегодня: $1000"
                   HorizontalAlignment="Center"
                   Margin="0,70,0,20"
                   FontSize="22" />

        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,120,0,20">
            <TextBlock Text="Сколько депаем?" HorizontalAlignment="Center"/>
            <TextBox x:Name="BetAmountText" Width="140"/>
        </StackPanel>

        <TextBlock Text="На что ставим?"
                   HorizontalAlignment="Center"
                   Margin="0,200,0,20"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#8B00FF"/>

        <Grid Margin="0,240,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Button x:Name="RedButton" Content="Красное" Click="BetButton_Click"/>
                <Button x:Name="BlackButton" Content="Чёрное" Click="BetButton_Click"/>
            </StackPanel>

            <!-- ЦЕНТР -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <Button x:Name="EvenButton" Content="ЧёРт(666)ное" Click="BetButton_Click"/>
                <Button x:Name="OddButton" Content="Нечётное" Click="BetButton_Click"/>
            </StackPanel>

            <!-- ПРАВАЯ -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBox x:Name="NumberInput"
                         Width="140"
                         FontSize="18"
                         Padding="8"
                         Background="#1A1A2E"
                         Foreground="White"
                         BorderBrush="#8B00FF"
                         BorderThickness="2"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         TextChanged="NumberInput_TextChanged"/>
                <Button x:Name="NumberButton"
                        Content="Ставка на число"
                        Click="BetButton_Click"/>

                <TextBlock x:Name="NumberWarning"
                           Foreground="#FF4D4D"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <TextBlock x:Name="ResultText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,60"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#F8F8FF"/>

        <Button x:Name="SpinButton"
                Content="Крутить рулетку!"
                Width="240"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                Click="SpinButton_Click"
                IsEnabled="False"
                Background="#AA00FF"/>
    </Grid>
</Window>
